{% extends "base.html.twig" %}

{% block title %}Todo{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ todo.title }}</h5>
                <p class="card-text">{{ todo.description }}</p>
                <a href="{{ path('update', {id: todo.id}) }}" class="btn btn-primary">Edit</a>
                <a href="{{ path('remove', {id: todo.id}) }}" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </div>
        </div>

        <div class="card mt-sm-3 mt-3 mt-md-0 mt-lg-0">
            {{ form(noteForm) }}
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-3">
            {{ message }}
        </div>
    {% endfor %}
    <div class="notes-display mt-3">
        {% for note in notes %}
            <div class="card text-white bg-info mb-3" style="width: 15rem; min-height: 10rem">
                <div class="card-body">
                    <p class="card-text">{{ note.description }}</p>
                    <a class="btn btn-danger" href="{{ path('note-remove', {id: todo.id, nid: note.id}) }}">Remove</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}